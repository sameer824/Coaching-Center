<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coaching_quiz_form" model="ir.ui.view">
        <field name="name">coaching.quiz.form</field>
        <field name="model">coaching.quiz</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                        <group>
                            <field name="name"/>
                            <field name="topic"/>
                            <field name="q_date"/>
                            <field name="description" />
                        </group>
                        <!-- Quiz Configuration -->
                        <group>
                            <field name="duration"/>
                            <field name="class_id"/>
                            <field name="quiz_marks"/>
                            <field name="quiz_file" filename="name"/>
                        </group>
                </group>
                <notebook>
                    <page string="Student Lines">
                        <field name="student_lines" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="student_id"/>
                                <field name="solve_file"/>
                                <field name="max_marks"/>
                                <field name="passing_marks"/>
                                <field name="is_published"/>
                            </tree>
                        </field>
                    </page>
                </notebook> <!-- Basic Information -->
                </sheet><!-- Additional Configuration -->
            </form>
        </field>
    </record>
    <record id="view_coaching_quiz_tree" model="ir.ui.view">
        <field name="name">coaching.quiz.tree</field>
        <field name="model">coaching.quiz</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Columns in the Tree View -->
                <field name="name" string="Quiz Name"/>
                <field name="topic" string="Quiz Topic"/>
                <field name="duration" string="Duration"/>
                <field name="q_date" string="Quiz Date"/>
                <field name="class_id"/>
            </tree>
        </field>
    </record>

        
<record id="coaching_quiz_action" model="ir.actions.act_window">
    <field name="name">Quiz</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">coaching.quiz</field>
    <field name="view_mode">tree,kanban,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Add First  Quiz!
        </p>
    </field>
</record>
        <menuitem id="coaching_task_root" name="Task" parent="coaching_root"  sequence="50"/>
        <menuitem id="coaching_quiz_root" name="Quiz" parent="coaching_task_root" action="coaching_quiz_action" sequence="50"/>
        <menuitem id="coaching_assignment_root" name="Assignment" parent="coaching_task_root" action="coaching_assignment_action"  sequence="50"/>
    
</odoo>